<%= search_form_for @q do |f| %>
  <%= f.search_field :name_or_user_email_or_description_or_category_name_cont, placeholder: 'Search', class: "form-control me-2" %>
  <div class="field">
    <%= f.label :price_gteq, "Price" %>
    <%= f.text_field :price_gteq %>
  </div>
    <br>
  <%= f.submit %>
  <%= link_to 'Reset Search', products_path, class: 'btn btn-primary' %>
<% end %>